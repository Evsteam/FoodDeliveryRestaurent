<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.evs.foodexp.driverPkg.activity.DriverToGetDetailActivity">

    <include
        android:id="@+id/toolbarDriverToGetJobDetail"
        layout="@layout/toolbar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarDriverToGetJobDetail"
        android:background="@color/skyBlue"
        android:elevation="@dimen/_2sdp"
        android:translationZ="@dimen/_25sdp"
        android:id="@+id/jobDetailLayout"
        android:padding="@dimen/_15sdp"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launcher_background"
            app:riv_corner_radius="@dimen/_40sdp"
            android:id="@+id/toGetJobDetailImg"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/toGetJobDetailImg"
            android:layout_marginLeft="@dimen/_15sdp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jessica Fox"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/location"
                    android:layout_gravity="bottom"
                    android:paddingBottom="@dimen/_3sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8753 Mauricio Walks"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    />

            </LinearLayout>

        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="@dimen/_37sdp"
            android:layout_height="@dimen/_37sdp"
            android:src="@drawable/ic_launcher_background"
            app:riv_corner_radius="@dimen/_40sdp"
            android:id="@+id/toGetJobDetailMsgImg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_15sdp"
        android:layout_below="@id/jobDetailLayout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRODUCT NAME"
            android:textColor="@color/gray"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/d_din_bold"
            android:drawablePadding="@dimen/_5sdp"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="iPhone 11 Pro"
            android:fontFamily="@font/d_din_bold"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:backgroundTint="@color/grey_light"
            android:paddingBottom="@dimen/_13sdp"
            android:text=""
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_13sdp"
            android:typeface="sans" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WHAT STORE(MUST BE IN CITY YOU LIVE)"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/gray"
            android:drawablePadding="@dimen/_5sdp"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/d_din_bold"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="Street Market"
            android:fontFamily="@font/d_din_bold"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:backgroundTint="@color/grey_light"
            android:paddingBottom="@dimen/_13sdp"
            android:text=""
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_13sdp"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESTIMATED PRICE"
            android:textColor="@color/gray"
            android:drawablePadding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/d_din_bold"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:hint="$200.99"
            android:fontFamily="@font/d_din_bold"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:backgroundTint="@color/grey_light"
            android:paddingBottom="@dimen/_13sdp"
            android:text=""
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_13sdp"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIP AMOUNT"
            android:textColor="@color/gray"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawablePadding="@dimen/_5sdp"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/d_din_bold"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:hint="$5.00"
            android:fontFamily="@font/d_din_bold"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:backgroundTint="@color/grey_light"
            android:paddingBottom="@dimen/_13sdp"
            android:text=""
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_13sdp"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELIVERY FEE"
            android:textColor="@color/gray"
            android:drawablePadding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/d_din_bold"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:hint="$6.00"
            android:fontFamily="@font/d_din_bold"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:backgroundTint="@color/grey_light"
            android:paddingBottom="@dimen/_13sdp"
            android:text=""
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_13sdp"
            android:typeface="sans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPECIAL NOTES"
            android:textColor="@color/gray"
            android:drawablePadding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/d_din_bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/d_din_bold"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:backgroundTint="@color/grey_light"
            android:paddingBottom="@dimen/_13sdp"
            android:text="Enter notes here"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_13sdp"
            android:typeface="sans" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/d_din_bold"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:backgroundTint="@color/grey_light"
            android:paddingBottom="@dimen/_13sdp"
            android:text=""
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_13sdp"
            android:typeface="sans" />




    </LinearLayout>

    <Button
        android:id="@+id/jobDetailTotalAmount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/button_corner_yellow"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:text="Total Amount: $159.00"
        android:layout_above="@id/NoContactReminterBtn"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_13sdp" />

    <Button
        android:id="@+id/NoContactReminterBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_above="@id/toGetStatusLayoutDriver"
        android:background="@color/pink"
        android:gravity="center"
        android:padding="8dp"
        android:text="Reminder: No contact on the delivery"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_11sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toGetStatusLayoutDriver"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        >
        <Button
            android:id="@+id/markAsDeliveredBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/appCodeColor"
            android:gravity="center"
            android:padding="8dp"
            android:text="Mark As Delivered"

            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp" />

        <Button
            android:id="@+id/requestMoreMoney"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/appCodeColor"
            android:gravity="center"
            android:padding="8dp"
            android:text="REQUEST MONEY"

            android:textColor="@android:color/white"
            android:textSize="@dimen/_10sdp" />


    </LinearLayout>

</RelativeLayout>
