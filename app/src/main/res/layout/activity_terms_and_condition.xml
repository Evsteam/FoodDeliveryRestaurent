<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.evs.foodexp.commonPkg.common.activity.TermsAndConditionActivity">

    <include
        android:id="@+id/toolbarTermsAndCondition"
        layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/termsAndConditionTxt"
        android:layout_below="@id/toolbarTermsAndCondition"
        android:layout_margin="@dimen/_15sdp"
        />

    </LinearLayout>

    </ScrollView>

</LinearLayout>
