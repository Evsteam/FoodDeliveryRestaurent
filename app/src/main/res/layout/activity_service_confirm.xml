<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbarServiceConfirmed"
        layout="@layout/toolbar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/checkOrderPicked"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/check_new" />

        <TextView
            android:id="@+id/requestConfirmMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkOrderPicked"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/d_din_bold"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Request Confirmed!"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/requestConfirmTotalChargeMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/requestConfirmMsg"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:fontFamily="@font/d_din_bold"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <TextView
        android:id="@+id/requestConfirmVendorInfoMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/serviceDriver"
        android:fontFamily="@font/d_din_bold"
        android:gravity="center"
        android:padding="5dp"
        android:text="Please find the vendor Information below"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        android:visibility="gone"

        />

    <RelativeLayout
        android:id="@+id/serviceDriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/backToHomeBtn"
        android:background="@color/grey_light"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/orderPickedConfirmRelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/etxt_bg_white"
            android:gravity="center_vertical"

            android:padding="@dimen/_3sdp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/black"
                android:fontFamily="@font/d_din_font"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_7sdp"
                android:text="Booking Date/Time:"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/_13sdp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/bookingDateTimeConfirmedTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_7sdp"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/black"
                android:fontFamily="@font/d_din_font_bold"
                android:inputType="textEmailAddress"
                android:maxLines="2"
                android:padding="@dimen/_7sdp"
                android:text="Feb 15,2020|11:54 AM"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:typeface="sans" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/orderPickedConfirmRelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderPickedConfirmRelativeLayout1"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/etxt_bg_white"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/black"
                android:fontFamily="@font/d_din_font"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="@dimen/_7sdp"
                android:text="Total Hours:"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/_13sdp"
                android:typeface="sans" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_7sdp"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/black"
                android:fontFamily="@font/d_din_font_bold"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="@dimen/_7sdp"
                android:text="2 Hours"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:typeface="sans" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/orderPickedConfirmRelativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderPickedConfirmRelativeLayout2"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/etxt_bg_white"
            android:gravity="center_vertical"
            android:padding="@dimen/_5sdp">


            <ImageView
                android:id="@+id/driverImageOrderPicked"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_3sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/driverNameOrderPicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@id/driverImageOrderPicked"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/black"
                android:fontFamily="@font/d_din_font_bold"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="@dimen/_7sdp"
                android:text="Steve John"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/_13sdp"
                android:typeface="sans" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/CustomRatingBarGrey"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/drivierRatingInNumbers"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="3.5"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/drivierRatingInNumbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/black"
                android:fontFamily="@font/d_din_font"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="@dimen/_7sdp"
                android:text="4.8"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                android:typeface="sans" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderPickedConfirmRelativeLayout3"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_orange"
                android:gravity="center_vertical"

                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/callImageToDriver"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/phone" />

                <TextView
                    android:id="@+id/callDriver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/black"
                    android:fontFamily="@font/d_din_font"

                    android:maxLines="1"
                    android:padding="@dimen/_7sdp"
                    android:text="CALL DRIVER"
                    android:textColor="@android:color/white"

                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_13sdp"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/buton_bg_red"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/cancel_request" />

                <TextView
                    android:id="@+id/edttxt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/black"
                    android:fontFamily="@font/d_din_font"
                    android:maxLines="1"
                    android:padding="@dimen/_7sdp"
                    android:text="CANCEL REQUEST"
                    android:textColor="@android:color/white"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/_13sdp"
                    android:typeface="sans" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/backToHomeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/appCodeColor"
        android:text="BACK TO HOME SCREEN"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />

</RelativeLayout>
