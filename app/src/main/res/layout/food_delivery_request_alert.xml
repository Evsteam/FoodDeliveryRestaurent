<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FOOD DELIVERY REQUEST"
        android:fontFamily="@font/d_din_font"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:gravity="center_horizontal"
        android:id="@+id/toGetRequestHeading"
        android:padding="@dimen/_18sdp"
        android:textStyle="bold"
        android:background="@color/appCodeColor"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/toGetRequestLinearLayout"
        android:layout_below="@id/toGetRequestHeading"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Est. Delivery miles : "
                android:fontFamily="@font/d_din_font"
                android:textColor="@color/orange"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 miles"
                android:id="@+id/tv_miles"
                android:fontFamily="@font/d_din_font_bold"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Est. Delivery Time : "
                android:fontFamily="@font/d_din_font"
                android:textColor="@color/orange"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 10:00"
                android:fontFamily="@font/d_din_font_bold"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/tv_time"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tip amount:"
                android:fontFamily="@font/d_din_font"
                android:textColor="@color/orange"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" $20.00"
                android:fontFamily="@font/d_din_font_bold"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/tv_tipAmount"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:id="@+id/layout_del"
            android:orientation="horizontal"

            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Est. Total Delivery Fee: "
                android:fontFamily="@font/d_din_font"
                android:textColor="@color/orange"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" $5.00"
                android:fontFamily="@font/d_din_font_bold"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/tv_deliveryFee"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Est. Total Amount: "
                android:fontFamily="@font/d_din_font"
                android:textColor="@color/orange"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" $5.00"
                android:fontFamily="@font/d_din_font_bold"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:id="@+id/tv_totalAmount"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/img_mapSearch"
        android:id="@+id/layout_pickup">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Name:"
            android:textColor="@color/orange"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 77 Cole Extension, 94507 Apt. 690"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:maxLines="2"
            android:id="@+id/tv_picupLocation"/>

    </LinearLayout>

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/map_search"
            android:id="@+id/img_mapSearch"
        android:padding="7dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_with_shdows"/>
</RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            android:id="@+id/layout_drop">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drop Location:"
                android:textColor="@color/orange"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="321 Main Street, 94507 Apt. 960"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:maxLines="2"
                android:id="@+id/tv_dropLocation"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_light"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/toGetRequestLinearLayout"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="SKIP JOB"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:background="@color/pink"
            android:padding="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:id="@+id/tv_reject"/>

        <TextView
            android:id="@+id/tv_accept"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ACCEPT JOB"
            android:background="@color/greenCode"
            android:padding="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />


    </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>