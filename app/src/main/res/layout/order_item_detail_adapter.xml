<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/_115sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/food1"
        app:riv_corner_radius="@dimen/_5sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_toRightOf="@id/item_image">

        <ImageView
            android:id="@+id/img_foodType"
            android:layout_width="@dimen/_9sdp"
            android:layout_height="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:src="@drawable/nonveg" />

        <TextView
            android:id="@+id/tv_itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@id/img_foodType"
            android:fontFamily="@font/d_din_font"
            android:maxLines="1"
            android:text="Sabia sobre comida"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_restaurentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_itemName"
            android:layout_marginTop="@dimen/_2sdp"
            android:maxLines="1"
            android:text="Yahoo comida"
            android:textSize="@dimen/_12sdp" />


        <TextView
            android:id="@+id/tv_itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_restaurentName"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="$150"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />


        <Button
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@id/tv_itemPrice"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/button_corner_perple"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/tv_quintity"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>

