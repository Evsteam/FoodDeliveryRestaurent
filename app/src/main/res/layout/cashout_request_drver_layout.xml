<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_15sdp"
    android:background="@color/skyBlue"
    android:id="@+id/cashoutRequestLayout"
    >

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/black"
        android:fontFamily="@font/d_din_font_bold"
        android:inputType="textEmailAddress"
        android:maxLines="1"

        android:text="Total Earnings"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/_13sdp"
        android:typeface="sans" />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/black"
        android:fontFamily="@font/d_din_font_bold"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:inputType="textEmailAddress"
        android:maxLines="1"

        android:text="$500.29"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textCursorDrawable="@null"

        android:typeface="sans" />


</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cashoutRequestLayout"
        android:gravity="center"

        >

        <TextView
            android:id="@+id/cashoutoutWithdrwawbleBalanceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/d_din_font_bold"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:text="Withdrawable Balance: $500.00"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_15sdp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/cashWithdrawalLimitTxt"
            android:layout_below="@id/cashoutoutWithdrwawbleBalanceTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/d_din_font_bold"
            android:textStyle="bold"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textSize="@dimen/_14sdp"
            android:layout_margin="@dimen/_5sdp"
            android:text="(Max limit $5,000 per withdrawal)"
            android:textColor="@color/grey_light"
            android:textColorHint="@android:color/black"
            android:textCursorDrawable="@null"

            android:typeface="sans" />


        <LinearLayout
            android:id="@+id/totalCashoutDrawalAmount"
            android:layout_below="@id/cashWithdrawalLimitTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/etxt_gray_bg"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="@dimen/_15sdp"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/callDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@android:color/black"
                android:fontFamily="@font/d_din_font_bold"
                android:textStyle="bold"
                android:maxLines="1"
                android:padding="10dp"
                android:text="$0.00"
                android:textColor="@android:color/black"

                android:textCursorDrawable="@null"
                android:textSize="@dimen/_25sdp"
                android:typeface="sans" />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/totalCashoutDrawalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_corner_perple"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"

            android:orientation="horizontal"
            android:padding="15dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@android:color/black"
                android:fontFamily="@font/d_din_font"
                android:textStyle="bold"
                android:maxLines="1"
                android:padding="10dp"
                android:text="Submit Request"
                android:textColor="@android:color/white"

                android:textCursorDrawable="@null"
                android:textSize="@dimen/_20sdp"
                android:typeface="sans" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>