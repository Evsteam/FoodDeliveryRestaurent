<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".commonPkg.common.fragment.ChangePasswordFragment">

    <!--<include
        android:id="@+id/toolbarChangePassword"
        layout="@layout/toolbar_layout" />-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:layout_marginBottom="@dimen/_20sdp"
            >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="250dp"
               android:orientation="vertical"
               android:background="@drawable/change_password_background"
               android:gravity="center"
               android:id="@+id/forgetPasswordImg"
               >
               <ImageView
                   android:layout_width="150dp"
                   android:layout_height="120dp"
                   android:src="@drawable/forgot_password"/>


           </LinearLayout>

        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"

                >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello Donnie, welcome!"
                android:textColor="@color/black"
                android:id="@+id/tv_title"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/d_din_font"
                android:gravity="center_horizontal"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change You Account Password."
                android:textColor="@color/black"
                android:id="@+id/textTwoChangePassword"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_8sdp"
                android:textSize="@dimen/_15sdp"
                android:layout_below="@id/tv_title"
                android:gravity="center_horizontal"
                />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/etxt_bg"
        android:id="@+id/currentPasswordLayout"
        android:layout_below="@id/textTwoChangePassword"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_3sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/edttxt_current_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/black"
            android:gravity="center_vertical"
            android:hint="Current Password"
            android:fontFamily="@font/d_din_font"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="@dimen/_5sdp"
            android:text=""
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_14sdp"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/etxt_bg"
        android:id="@+id/newPasswordLayout"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/currentPasswordLayout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_3sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/edttxt_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/black"
            android:gravity="center_vertical"
            android:hint="New Password"
            android:fontFamily="@font/d_din_font"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="@dimen/_5sdp"
            android:text=""
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_14sdp"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/etxt_bg"
        android:layout_below="@id/newPasswordLayout"
        android:id="@+id/confirmPasswordLayout"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_3sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/password" />

        <EditText
            android:id="@+id/edttxt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/black"
            android:gravity="center_vertical"
            android:hint="Confirm Password"
            android:fontFamily="@font/d_din_font"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="@dimen/_5sdp"
            android:text=""
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_14sdp"
            android:typeface="sans" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/confirmPasswordLayout"
        android:background="@drawable/button_corner_perple"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Update Password"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_14sdp" />


            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>